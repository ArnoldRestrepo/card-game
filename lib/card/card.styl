// Card
.Card
	width 200px
	min-width 100px
	background #C2AC37
	border 5px solid #101010
	box-shadow 0 0 2px 5px rgba(black,.5)
	border-radius .5em
	padding .8em
	&-name
		color white
		text-transform uppercase
		margin 0 0 .5em 0
		font-size 1em
	&-image
		width 100%
	&-description
		background #fff
		padding  .8em
		margin-bottom .5em
		border 2px solid #101010
	&-power
		background #101010
		color #fff
		font-size .75em